python setup.py bdist_wheel
python setup.py sdist

# build Wheels
cibuildwheel
copy the wheels to bdist_wheel folder

# UPLOAD to PyPI
python -m twine check dist/*
python -m twine upload dist/*
enter token

# build Conda packages
cd conda-recipe
conda build .
